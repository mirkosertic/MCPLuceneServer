<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Property for log directory -->
    <property name="LOG_DIR" value="${user.home}/.mcplucene/log"/>
    <property name="LOG_FILE" value="${LOG_DIR}/mcplucene"/>

    <!-- Console appender for non-deployed profiles -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling file appender for deployed profile -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Daily rollover with size limit -->
            <fileNamePattern>${LOG_FILE}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- Max 10MB per file -->
            <maxFileSize>10MB</maxFileSize>
            <!-- Keep 5 log files total -->
            <maxHistory>5</maxHistory>
            <!-- Total size cap (5 files x 10MB = 50MB max) -->
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configuration for deployed profile: file logging only, no console -->
    <springProfile name="deployed">
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- Configuration for all other profiles: console logging -->
    <springProfile name="!deployed">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>
